<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_transfer_order" model="ir.actions.report">
        <field name="name">Internal Product Transfer Order</field>
        <field name="model">internal.transfer</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_transfar.report_transfer_order</field>
        <field name="report_file">inventory_transfar.report_transfer_order</field>
        <field name="binding_model_id" ref="model_internal_transfer"/>
        <field name="binding_type">report</field>
    </record>

   
    <record id="action_report_inventory_consolidated" model="ir.actions.report">
        <field name="name">Internal Consolidated Report</field>
        <field name="model">report.inventory_transfar.report_inventory</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventory_transfar.report_inventory</field>
        <field name="report_file">inventory_transfar.report_inventory</field>
        <field name="binding_model_id" ref="model_consolidated_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_excel_inventory_consolidated" model="ir.actions.report">
        <field name="name">Internal Consolidated Excel Report</field>
        <field name="model">consolidated.report.wizard</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">inventory_transfar.report_inventory_xls</field>
        <field name="report_file">inventory_transfar.report_inventory_xls</field>
        <field name="binding_type">report</field>
    </record>
    
</odoo>

