<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
                <!--FORM VIEW-->
        <record model="ir.ui.view" id="due_days_mail_config_list_form">
            <field name="name">due.days.mail.config.form</field>
            <field name="model">due.days.mail.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="days_duration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

                <!--List View-->
        <record model="ir.ui.view" id="due_days_mail_config_list">
            <field name="name">due.days.mail.config.tree</field>
            <field name="model">due.days.mail.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="days_duration"/>
                </tree>
            </field>
        </record>

            <!--ACTION BUTTON-->
        <record id="action_mail_schedule_days_config" model="ir.actions.act_window">
            <field name="name">Mail Schedule Days Config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">due.days.mail.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Mail Schedule Days Config
                </p>
            </field>
        </record>

            <!--REPORT MENUITEM IN INTERFACE-->
        <menuitem id="menu_mail_schedule_days_config"
            name="Mail Schedule Days Config"
            parent="stock.menu_stock_config_settings"
            action="action_mail_schedule_days_config"
        />

    </data>
</odoo>

